{
  "name": "messenger",
  "version": "1.0.0",
  "description": "![Overview](https://raw.githubusercontent.com/akhil-code/messenger/master/docs/Messenger.jpg?token=GHSAT0AAAAAABQL5NJY72JD4ZKQQSXQOXVKYOZWNNA)",
  "main": "dist/app.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "clean": "rimraf build/",
    "build": "npm run clean && tsc && npm run copy-artefacts",
    "copy-views": "fse copy src/views build/views",
    "copy-public": "fse copy src/public build/public",
    "copy-artefacts": "npm run copy-views && npm run copy-public",
    "dev": "nodemon --watch src  -e ts,js,ejs,json --exec npm run start",
    "start": "npm run build && node build/app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akhil-code/messenger.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akhil-code/messenger/issues"
  },
  "homepage": "https://github.com/akhil-code/messenger#readme",
  "devDependencies": {
    "@atao60/fse-cli": "^0.1.7",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.8",
    "@types/socket.io": "^3.0.2",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "socket.io": "^4.4.1"
  }
}
